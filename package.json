{
  "name": "dokploy",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "local:build": "docker build -t alexdev404/dokploy-containerized:latest . && docker build -t alexdev404/dokploy:latest -f Dockerfile.local .",
    "local:build::pub": "docker build -t alexdev404/dokploy-containerized:latest . && docker build -t alexdev404/dokploy:latest -f Dockerfile.local . && docker push alexdev404/dokploy-containerized:latest && docker push alexdev404/dokploy:latest",
    "build:tarball": "./scripts/build-app-tarball.sh",
    "dokploy:setup": "pnpm --filter=dokploy run setup",
    "dokploy:dev": "pnpm --filter=dokploy run dev",
    "dokploy:build": "pnpm --filter=dokploy run build",
    "dokploy:start": "pnpm --filter=dokploy run start",
    "test": "pnpm --filter=dokploy run test",
    "server:script": "pnpm --filter=server run switch:dev",
    "server:dev": "pnpm --filter=server run dev",
    "server:build": "pnpm --filter=server run build",
    "docker:build:canary": "./apps/dokploy/docker/build.sh canary",
    "typecheck": "pnpm -r run typecheck",
    "build": "pnpm -r run build",
    "format-and-lint": "biome check .",
    "check": "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true",
    "format-and-lint:fix": "biome check . --write",
    "generate:openapi": "pnpm --filter=dokploy run generate:openapi"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@types/node": "^22.13.14",
    "dotenv": "16.4.5",
    "esbuild": "0.20.2",
    "lint-staged": "^15.5.2",
    "tsx": "4.16.2"
  },
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": "^22.22.0",
    "pnpm": ">=9.12.0"
  },
  "lint-staged": {
    "*": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  },
  "resolutions": {
    "@types/react": "18.3.5",
    "@types/react-dom": "18.3.0"
  }
}
